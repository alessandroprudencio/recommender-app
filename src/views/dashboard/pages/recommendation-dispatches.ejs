  <script>
    $(document).ready(function () {
      const columns = [
        {
          data: "id",
          render: function (data) {
            return `<a href="/recommendation-dispatches/${data}" class="text-primary">${data}</a>`;
          }
        },
        { data: "total_dispatches" },
        {
          data: "last_dispatch_date",
          render: function (data) {
            return new Date(data).toLocaleString('pt-BR');
          }
        },
        {
          data: "status",
          render: function (data) {
            const statusClasses = {
              completed: "success",
              failed: "danger",
              pending: "warning"
            };
            const statusLabels = {
              completed: "Concluído",
              failed: "Falhou",
              pending: "Pendente"
            };
            return `<span class="badge bg-${statusClasses[data]}">${statusLabels[data]}</span>`;
          }
        },
        {
          data: "message_status",
          render: function (data) {
            return `
              <div class="d-flex gap-2">
                <span class="badge bg-success" data-bs-toggle="tooltip" title="Enviadas">${data.sent}</span>
                <span class="badge bg-danger" data-bs-toggle="tooltip" title="Falhas">${data.failed}</span>
                <span class="badge bg-warning" data-bs-toggle="tooltip" title="Pendentes">${data.pending}</span>
              </div>
            `;
          }
        }
      ];

      const options = {
        serverSide: true,
        processing: true,
        order: [[2, "desc"]], // Order by last_dispatch_date desc
        pageLength: 10,
        lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
        dom: '<"top"lf>rt<"bottom"ip><"clear">',
        language: {
          url: "/public/js/datatable-pt-BR.json"
        }
      };

      initDataTable("#dispatchesTable", "/api/dispatches-recommendation", columns, options, true, "Pesquisar envio");
    });
  </script>

