    <script>
        handleDetailsControl(
            "#dataTablePurchaseHistory",
            "snapshot", // supondo que seja o caminho `item.product.*` nos dados
            "Produtos comprados",
            10,
            "/api/purchase-history",
            [
                {
                    data: null,
                    orderable: false,
                    className: "details-control",
                    defaultContent: '<i class="fas fa-chevron-down"></i>',
                },
                { data: "externalId", title: "ID da Venda" },
                {
                    data: "items",
                    title: "Total",
                    render: function (items) {
                        const total = (items || []).reduce(
                            (sum, i) => sum + (i.price || 0) * (i.quantity || 0),
                            0
                        );
                        return `R$ ${total.toFixed(2)}`;
                    },
                },
                { data: "clientName", title: "Cliente" },
                { data: "phone", title: "Telefone" },
                { data: "clientActive", title: "Cliente Ativo" },
                {
                    data: "purchaseDate",
                    title: "Data da Venda",
                    render: function (data) {
                        return new Date(data).toLocaleString();
                    },
                },
            ],
            function (row, data, dataIndex) {
                console.log('chamou o createdRow', data)
                // Adiciona os atributos personalizados em cada <tr>
                $(row).attr("data-products", JSON.stringify(data.items || []));
