    <script>
      $(document).ready(function () {
        const id = "<%= recommendationDispatchId %>";

        // Inicializa o DataTable
        initDataTable(
          "#clientesTable",
          `/api/recommendation-dispatches/${id}/messages-status`,
          [
            { data: "name" },
            { data: "phone" },
            {
              data: "message",
              render: function (data) {
                return data.length > 30 ? data.substring(0, 30) + '...' : data;
              }
            },
            {
              data: "products",
              render: function (data) {
                if (!data || data.length === 0) return '<span class="text-muted">Sem produtos</span>';

                const maxProducts = 2;
                const displayedProducts = data.slice(0, maxProducts);
                const remainingCount = data.length - maxProducts;

                let html = displayedProducts.map(product => `
                  <span class="badge badge-info mr-1 mb-1">
                    ${product.name}
                  </span>
                `).join('');

                if (remainingCount > 0) {
                  const productsData = data.map(p => p.name).join(',');
                  html += `
                    <button type="button" 
                            class="btn btn-link btn-sm p-0 ml-1" 
                            data-toggle="modal"
                            data-target="#productsModal"
                            data-products="${productsData}">
                      +${remainingCount} mais
                    </button>
                  `;
                }

                return html;
              }
            },
            {
              data: "status",
              render: function (data) {
                const statusMap = {
                  SENT: ["primary", "Enviado"],
                  DELIVERED: ["success", "Entregue"],
                  READ: ["info", "Lido"],
                  FAILED: ["danger", "Falhou"],
                  QUEUED: ["warning", "Na Fila"],
                  UNDELIVERED: ["secondary", "Não Entregue"]
                };
                const [color, label] = statusMap[data] || ["light", data];
                return `<span class="badge badge-${color}">${label}</span>`;
              }
            },
            {
              data: "createdAt",
              render: function (data) {
                return new Date(data).toLocaleString('pt-BR');
              }
            }
          ],
          {},
          true,
          "pesquisar cliente"
        );

        // Manipula a abertura do modal
        $('#productsModal').on('show.bs.modal', function (event) {
          const button = $(event.relatedTarget);
          const products = button.data('products').split(',');
          const modalBody = $(this).find('#modalProductsList');

          const productsHtml = products.map(product => `
            <div class="mb-2">
              <span class="badge badge-info">${product}</span>
            </div>
          `).join('');

          modalBody.html(productsHtml);
        });
      });
    </script>

