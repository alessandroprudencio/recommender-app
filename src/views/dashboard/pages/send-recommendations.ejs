      // Fun√ß√£o que retorna array com as categorias marcadas
      function getSelectedRfvCategories() {
        // 1) Pega os checados na UI
        const checked = Array.from(document.querySelectorAll('.rfv-checkbox:checked'))
          .map(input => input.value);

        if (checked.length) {
          return checked;
        }

        // 2) Se n√£o houver nenhum checkbox marcado, pega da URL
        const params = new URLSearchParams(window.location.search);
        const fromUrl = params.getAll('rfvCategories');
        return fromUrl;
      }

      // 1) Gera a query string com m√∫ltiplos par√¢metros (sem checar length, pois sempre h√° ‚â•1)
      function buildRfvQuery() {
        return getSelectedRfvCategories()
          .map(c => `rfvCategories=${encodeURIComponent(c)}`)
          .join('&');
      }

      // Ao clicar em "Aplicar", voc√™ pode disparar um evento ou recarregar a lista:
      document.getElementById('applyRfvFilters').addEventListener('click', () => {
        const url = new URL(window.location.href);
        // limpa todas as entradas antigas
        url.searchParams.delete('rfvCategories');
        // adiciona cada categoria de volta
        getSelectedRfvCategories().forEach(c => url.searchParams.append('rfvCategories', c));
        window.location.href = url.pathname + url.search;
      });

      handleDetailsControl(
        "#dataTableRecommendations",
        "snapshot",
        "Produtos recomendados",
        4,
        `/api/recommendations?${buildRfvQuery()}`,
        [
          {
            data: null,
            orderable: false,
            render: (data, type, row) => {
              return `<div class="text-center px-0"> <input type="checkbox" class="form-check-input row-checkbox"></div>
        `;
            },
          },
          {
            data: null,
            orderable: false,
            className: "details-control",
            defaultContent: '<i class="fas fa-chevron-down"></i>',
          },
          { data: "name", title: "Nome" },
          {
            data: null,
            render: function (data, type, row) {
              const score = row.rfvTotalScore || "N/A";
              const labelMap = {
                inactive: ["secondary", "Inativo"],
                weak: ["danger", "Perdendo"],
                average: ["warning", "Oportunidades"],
                good: ["info", "Leais"],
                excellent: ["success", "Campe√µes"],
              };

              const [color, label] = labelMap[data.rfvClassificationLabel] || ["light", data.rfvClassificationLabel];

              return `<span class="badge badge-${color}" data-bs-toggle="tooltip" title="Score: ${score}">${label || 'N√£o calculado'}</span>`;
            },
          },
          {
            data: "phone",
            title: "Telefone",
          },
          { data: "active", title: "Ativo" },

        ],
        function (row, data) {
          $(row).attr("data-products", JSON.stringify(data.products));
          $(row).attr("data-client-id", data.clientId);
        },
        "pesquisar cliente"
      );

      handleCheckbox("#dataTableRecommendations")

      function getTextArea() {
        // Seleciona o texto da textarea
        const textarea = document.getElementById('textAreaTemplateMessage');
        textarea.select();
        textarea.setSelectionRange(0, 99999); // Para dispositivos m√≥veis

        // Usando a API de Clipboard
        return textarea.value
      }

      // Dentro do evento de mudan√ßa do product-checkbox
      $(document).on("change", ".product-checkbox", function () {
        const productId = $(this).data("product-id");
        const tr = $(this).closest("tr").prev(); // Linha pai (cliente)
        const clientId = tr.data("client-id");
        const isChecked = this.checked;

        // Garante que o cliente existe no objeto
        if (!checkedProductsByClient[clientId]) {
          checkedProductsByClient[clientId] = new Set();
        }

        // Atualiza o Set conforme o checkbox
        if (isChecked) {
          checkedProductsByClient[clientId].add(productId);
        } else {
          checkedProductsByClient[clientId].delete(productId);
        }
      });

      document.getElementById("sendMessagBtn").addEventListener("click", async function (e) {
        e.preventDefault();

        // Armazena o elemento do bot√£o
        const $btn = $(this);
        // Adiciona estado de loading
        $btn.prop('disabled', true);
        $btn.html(`
      <span class="spinner-border spinner-border-sm mr-2" role="status" aria-hidden="true"></span> 
      Enviando...
    `);

        const message = getTextArea();
        const selectedClients = [];

        // Iterar sobre TODOS os clientes com produtos selecionados
        Object.keys(checkedProductsByClient).forEach(clientId => {
          const products = Array.from(checkedProductsByClient[clientId]).map(productId => ({ productId }));

          if (products.length > 0) {
            selectedClients.push({
              clientId,
              products
            });
          }
        });

        const body = {
          message,
          rfvCategories: getSelectedRfvCategories(),
          currentStoreId: "<%= currentStore.id %>"
        }

        if (document.getElementById('toggleSelectAll').checked) {
          Object.assign(body, { selectedClients })
        }

        fetch("/api/send-recommendation", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify(body)
        })
          .then(async (resp) => {
            if (!resp.ok) { // Verifica se o status N√ÉO est√° entre 200-299
              throw new Error(`Erro ${resp.status}: ${resp.statusText}`);
            }

            const { recommendationDispatchId } = await resp.json()

            window.location.href = `/recommendation-dispatches/${recommendationDispatchId}`
          })
          .catch(erro => {
            console.error("Erro:", erro);
            // alert("Erro ao enviar");
            notyf.error('Erro ao enviar mensagem');
          }).finally(() => {
            $btn.prop('disabled', false);
            $btn.html(`
        <i class="fab fa-whatsapp mr-2"></i>
        Enviar mensagens para os clientes
      `);
          })
      });

