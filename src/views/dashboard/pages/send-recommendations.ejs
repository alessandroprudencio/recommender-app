      //         icon.classList.add("fa-copy");
      //       }, 2000);
      //     })
      //     .catch(err => {
      //       console.error("Erro ao copiar: ", err);
      //     });
      // });

      const templatesDiv = document.getElementById('templates-data');
      const templates = JSON.parse(templatesDiv.dataset.templates);

      const select = document.getElementById('messageStyleSelect');
      const textarea = document.getElementById('textAreaTemplateMessage');

      select.addEventListener('change', () => {
        const selected = select.value;
        textarea.value = templates[selected] || '';
      });

      const params = new URLSearchParams(window.location.search);
      const sel = params.getAll('rfvCategories');
      document.querySelectorAll('.rfv-checkbox').forEach(input => {
        if (sel.includes(input.value)) input.checked = true;
      });

      document.addEventListener('DOMContentLoaded', () => {

        const templatesDiv = document.getElementById('templates-data');
        const templates = JSON.parse(templatesDiv.dataset.templates);

        const select = document.getElementById('messageStyleSelect');
        const textarea = document.getElementById('textAreaTemplateMessage');
        const preview = document.getElementById('messagePreview');

        const updateContent = (value) => {
          const template = textarea.value || templates[value];
          textarea.value = template;

          // Substitui {{nome}} por um nome fict√≠cio para visualiza√ß√£o
          const previewMessage = template
            .replace(/{{\s*nome\s*}}/gi, 'Alice')
            .replace(/{{\s*loja\s*}}/gi, 'Loja XPTO')
            .replace(/{{\s*produto1\s*}}/gi, 'Produto 1')
            .replace(/{{\s*produto2\s*}}/gi, 'Produto 2')

          // Se quiser converter quebras de linha em <br>
          const formatted = previewMessage.replace(/\n/g, '<br>');

          preview.innerHTML = `<p>${formatted}</p><div class="time">11:45 <i class="fas fa-check-double"></i></div>`;
        };

        select.addEventListener('change', () => {
          updateContent(select.value);
        });

        textarea.addEventListener('change', () => {
          updateContent(select.value);
        });

        // Inicializa ao carregar a tela
        updateContent(select.value);

        // Define o valor do textarea com base na op√ß√£o selecionada no carregamento
        const initialValue = select.value;
        if (initialValue && templates[initialValue]) {
          textarea.value = templates[initialValue];
        }


        // toggle
        const toggle = document.getElementById('toggleSelectAll');
        const tableCard = document.querySelector('.card.shadow.mb-4'); // o cont√™iner da tabela

        toggle.addEventListener('change', function () {
          if (this.checked) {
            tableCard.style.display = 'block';
          } else {
            tableCard.style.display = 'none';
          }
        });
      });
    </script>
